
import pandas as pd
import matplotlib.pyplot as plt




df = pd.DataFrame([['Bedrooms','Apartment',2735],['Bedrooms','House',1211],['Bedrooms','Flat',102],['Bedrooms','Studio',21   ],
                   ['Bathrooms','Apartment',3399],['Bathrooms','House',1848],['Bathrooms','Flat',135], ['Bathrooms','Studio',1],],columns=['group','column','val'])

df.pivot("column", "group", "val").plot(kind='bar')



# visualizing the plot
plt.show()
